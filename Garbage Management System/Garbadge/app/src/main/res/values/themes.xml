<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Garbadge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#267DE8</item>
        <item name="colorPrimaryVariant">#EBF30E71</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#046324</item>
        <item name="colorSecondaryVariant">#590909</item>
        <item name="colorOnSecondary">#FF1D1D</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#EB07B0E3</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Garbadge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Garbadge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Garbadge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>